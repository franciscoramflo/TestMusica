@page
@model LoginModel

@{
    ViewData["Title"] = "Entrar";
    Layout = "_Layout.Login.cshtml";
}

<div class="card o-hidden">
    <div class="row">
        <div class="col-md-12">
            <div class="p-4">
                <div class="auth-logo text-center mb-4"><img src="~/images/logo-triplei.png" alt=""></div>
                <h1 class="text-center text-18">Ingresa con tus credenciales</h1>
                <form  method="post" id="loginForm">
                    <div class="form-group mt-12">
                        <input asp-for="Input.UserName" class="form-control  form-control-rounded" placeholder="Usuario">
                        <div class="form-control-feedback">
                            <i class="icon-user text-muted"></i>
                        </div>
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-12">
                        <input asp-for="Input.Password" class="form-control form-control-rounded" placeholder="Contraseña">
                        <div class="form-control-feedback">
                            <i class="icon-lock2 text-muted"></i>
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <button class="btn btn-rounded btn-primary btn-block mt-2">Entrar</button>
                    <div class="form-group text-center mt-24">
                        <div class="col-sm-12 text-center">
                            <p class="text-muted">
                                V @(System.Reflection.Assembly.GetAssembly((typeof(Musica.Web.Pages.IndexModel))).GetName().Version.ToString())<br />
                            </p>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#loginForm").kendoValidator();
        })
    </script>
}
